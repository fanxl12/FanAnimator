<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/object_bt_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="动画"/>

        <Button
            android:id="@+id/value_bt_evaluator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义Evaluator"/>

        <TextView
            android:id="@+id/object_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4500ff00"
            android:gravity="center"
            android:padding="10dp"
            android:text="我是展现动画的"/>

    </LinearLayout>

    <Button
        android:id="@+id/menu"
        style="@style/MenuStyle"
        android:background="@drawable/ic_menu"/>

    <Button
        android:id="@+id/item1"
        style="@style/MenuItemStyle"
        android:background="@drawable/ic_collect"
        android:visibility="gone"/>

    <Button
        android:id="@+id/item2"
        style="@style/MenuItemStyle"
        android:background="@drawable/ic_phone"
        android:visibility="gone"/>

    <Button
        android:id="@+id/item3"
        style="@style/MenuItemStyle"
        android:background="@drawable/ic_sport"
        android:visibility="gone"/>

    <Button
        android:id="@+id/item4"
        style="@style/MenuItemStyle"
        android:background="@drawable/ic_upload"
        android:visibility="gone"/>

    <Button
        android:id="@+id/item5"
        style="@style/MenuItemStyle"
        android:background="@drawable/ic_clock"
        android:visibility="gone"/>


</FrameLayout>
