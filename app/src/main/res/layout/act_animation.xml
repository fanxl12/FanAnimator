<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_test_img"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/test"
        android:scaleType="centerCrop"
        android:transitionName="@string/imageStr"/>

    <Button
        android:id="@+id/bt_scale_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="makeScaleUpAnimation"/>

    <Button
        android:id="@+id/bt_scale_thumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="makeThumbnailScaleUpAnimation "/>

    <Button
        android:id="@+id/bt_scene_tran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="makeSceneTransitionAnimation "/>




</LinearLayout>
